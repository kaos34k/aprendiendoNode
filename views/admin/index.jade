extends ../layout.jade
block contenido
	h1 Panel de administración
	table(class="table")
		caption Productos Actuales
		thead
			tr
				th #
				th Nombre
				th Descripción
				th Precio
				th Imágenes
				th Acciones
		tbody
			each producto in productos
				tr
					td= producto.id
					td= producto.title
					td= producto.description
					td= producto.pricing
					td
						a(href="#{producto.imageUrl}" class="btn") Ver Imagen
					td
						a(href="/menu/edit/#{producto.id}") Editar
						=" - "
						a(href="/menu/delete/#{producto.id}") Eliminar